<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
</div>



{% comment %} <h1>{{ section.settings.title | t }}<h1>
<p> {{ section.settings.subtext_title | t }} <p> {% endcomment %}

{% schema %}
{
   "name": "Template 404",
   "tag": "section",
   "class":"flex items-center justify-center text-center py-7 h-screen",
   "settings": [
      {
         "type" : "text",
         "id"   : "title",
         "default": "404",
         "label": "404 heading title"
    
       },
       {
       "type": "text",
       "id": "subtext_title",
       "default": "The page that you are looking for is not found hahaha",
       "label": "404 Subtext Title"


       }



   ]

}
{% endschema %}

